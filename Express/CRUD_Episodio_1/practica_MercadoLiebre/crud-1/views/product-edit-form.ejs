<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= producto.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= producto.id %>" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= producto.name %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= producto.price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= producto.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option >Elegí</option>
							<option value="in-sale" <%=producto.category == 'in-sale' ? 'selected' : '' ; %>>En oferta</option>
							<option value="visited" <%=producto.category == 'visited' ? 'selected' : '' ; %>>Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= producto.description %></textarea>
					</div>
					<div class="col-12 col-md-6">
						<label for="image" class="form-label">Imágen:</label>
						<input type="file" id="image" name="image" class="form-input">
					</div>
					<div class="col-12">
						<form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST">
							<button type="submit" class="buy-now-button">Guardar producto</button>
						</form>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>